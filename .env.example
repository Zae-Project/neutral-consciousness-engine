# Neutral Consciousness Engine - Environment Configuration
# Copy this file to .env and adjust values as needed

# =============================================================================
# ROS 2 Configuration
# =============================================================================

# ROS Domain ID (for multi-robot scenarios)
ROS_DOMAIN_ID=0

# ROS localhost only (set to 1 to prevent network discovery)
ROS_LOCALHOST_ONLY=0

# =============================================================================
# Unity Bridge Configuration
# =============================================================================

# ROS-TCP-Endpoint settings
ROS_IP=0.0.0.0
ROS_TCP_PORT=10000

# =============================================================================
# Neural Firewall Settings
# =============================================================================

# Safety thresholds (based on biological limits)
MAX_FREQUENCY_HZ=150.0
VOLTAGE_LIMIT_MV=100.0

# FFT sample rate assumption
SAMPLE_RATE_HZ=1000.0

# =============================================================================
# OISL Latency Simulation
# =============================================================================

# Round-trip time in milliseconds
ROUND_TRIP_TIME_MS=20.0

# Libet's limit (consciousness continuity threshold)
# WARNING: Do not exceed this value
LIBET_LIMIT_MS=500.0

# =============================================================================
# Homomorphic Encryption
# =============================================================================

# Enable/disable encryption (disable for debugging)
ENCRYPTION_ENABLED=true

# Log encryption metrics
LOG_HE_METRICS=true

# TenSEAL CKKS parameters (advanced)
POLY_MODULUS_DEGREE=8192
SECURITY_LEVEL=128

# =============================================================================
# Dream Engine
# =============================================================================

# Start in dream mode (free-running generation)
DREAM_MODE=false

# Prediction rate in Hz
PREDICTION_RATE_HZ=30.0

# =============================================================================
# Development Settings
# =============================================================================

# Enable verbose logging
DEBUG=false

# Log level (DEBUG, INFO, WARN, ERROR, FATAL)
LOG_LEVEL=INFO
